{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "Syncrofy Design System tokens in DTCG format",
  "color": {
    "$description": "Color palette tokens",
    "primary": {
      "main": { "$value": "#266079", "$type": "color", "$description": "Primary brand color" },
      "light": { "$value": "#5a85a1", "$type": "color", "$description": "Lighter shade for hover/active states" },
      "dark": { "$value": "#17374a", "$type": "color", "$description": "Darker shade for active states" },
      "contrastText": { "$value": "#ffffff", "$type": "color", "$description": "Text color on primary backgrounds" }
    },
    "secondary": {
      "main": { "$value": "#424242", "$type": "color", "$description": "Secondary brand color" },
      "light": { "$value": "#6d6d6d", "$type": "color" },
      "dark": { "$value": "#1b1b1b", "$type": "color" },
      "contrastText": { "$value": "#ffffff", "$type": "color" }
    },
    "error": {
      "main": { "$value": "#C73A3A", "$type": "color", "$description": "Error/destructive color" },
      "light": { "$value": "#e26b6b", "$type": "color" },
      "dark": { "$value": "#a22b2b", "$type": "color" },
      "contrastText": { "$value": "#ffffff", "$type": "color" }
    },
    "warning": {
      "main": { "$value": "#8F6C1A", "$type": "color", "$description": "Warning color" },
      "light": { "$value": "#b59754", "$type": "color" },
      "dark": { "$value": "#634b12", "$type": "color" },
      "contrastText": { "$value": "#ffffff", "$type": "color" }
    },
    "info": {
      "main": { "$value": "#3B82F6", "$type": "color", "$description": "Informational color" },
      "light": { "$value": "#60A5FA", "$type": "color" },
      "dark": { "$value": "#2563EB", "$type": "color" },
      "contrastText": { "$value": "#ffffff", "$type": "color" }
    },
    "success": {
      "main": { "$value": "#067A57", "$type": "color", "$description": "Success color" },
      "light": { "$value": "#52a288", "$type": "color" },
      "dark": { "$value": "#045c41", "$type": "color" },
      "contrastText": { "$value": "#ffffff", "$type": "color" }
    },
    "grey": {
      "$description": "Neutral grey scale",
      "50": { "$value": "#F9FAFB", "$type": "color" },
      "100": { "$value": "#F3F4F6", "$type": "color" },
      "200": { "$value": "#E5E7EB", "$type": "color" },
      "300": { "$value": "#D1D5DB", "$type": "color" },
      "400": { "$value": "#9CA3AF", "$type": "color" },
      "500": { "$value": "#6B7280", "$type": "color" },
      "600": { "$value": "#4B5563", "$type": "color" },
      "700": { "$value": "#374151", "$type": "color" },
      "800": { "$value": "#1F2937", "$type": "color" },
      "900": { "$value": "#111827", "$type": "color" }
    },
    "text": {
      "$description": "Text color tokens",
      "primary": { "$value": "#111827", "$type": "color", "$description": "Primary text color" },
      "secondary": { "$value": "#6B7280", "$type": "color", "$description": "Secondary/muted text color" },
      "disabled": { "$value": "#9CA3AF", "$type": "color", "$description": "Disabled text color" }
    },
    "background": {
      "$description": "Background color tokens",
      "default": { "$value": "#FAFCFC", "$type": "color", "$description": "Default page background" },
      "paper": { "$value": "#FFFFFF", "$type": "color", "$description": "Surface/card background" }
    },
    "divider": { "$value": "#E5E7EB", "$type": "color", "$description": "Divider/border color" }
  },
  "typography": {
    "$description": "Typography scale tokens",
    "fontFamily": {
      "base": { "$value": "Geist, sans-serif", "$type": "fontFamily", "$description": "Base font family for the entire design system" }
    },
    "h1": {
      "$description": "Display heading - use sparingly for hero sections",
      "fontSize": { "$value": "96px", "$type": "dimension" },
      "fontWeight": { "$value": 300, "$type": "fontWeight" },
      "lineHeight": { "$value": "116.7px", "$type": "dimension" },
      "fontFamily": { "$value": "Geist, sans-serif", "$type": "fontFamily" }
    },
    "h2": {
      "$description": "Large heading",
      "fontSize": { "$value": "60px", "$type": "dimension" },
      "fontWeight": { "$value": 300, "$type": "fontWeight" },
      "lineHeight": { "$value": "120px", "$type": "dimension" },
      "fontFamily": { "$value": "Geist, sans-serif", "$type": "fontFamily" }
    },
    "h3": {
      "$description": "Section heading",
      "fontSize": { "$value": "48px", "$type": "dimension" },
      "fontWeight": { "$value": 400, "$type": "fontWeight" },
      "lineHeight": { "$value": "116.7px", "$type": "dimension" },
      "fontFamily": { "$value": "Geist, sans-serif", "$type": "fontFamily" }
    },
    "h4": {
      "$description": "Sub-section heading",
      "fontSize": { "$value": "32px", "$type": "dimension" },
      "lineHeight": { "$value": "48px", "$type": "dimension" },
      "fontFamily": { "$value": "Geist, sans-serif", "$type": "fontFamily" }
    },
    "h5": {
      "$description": "Card/panel heading",
      "fontSize": { "$value": "24px", "$type": "dimension" },
      "fontWeight": { "$value": 400, "$type": "fontWeight" },
      "letterSpacing": { "$value": "-1px", "$type": "dimension" },
      "lineHeight": { "$value": "32px", "$type": "dimension" },
      "fontFamily": { "$value": "Geist, sans-serif", "$type": "fontFamily" }
    },
    "h6": {
      "$description": "Small heading / label heading",
      "fontSize": { "$value": "20px", "$type": "dimension" },
      "fontWeight": { "$value": 600, "$type": "fontWeight" },
      "letterSpacing": { "$value": "-0.4px", "$type": "dimension" },
      "lineHeight": { "$value": 1.6, "$type": "number" },
      "fontFamily": { "$value": "Geist, sans-serif", "$type": "fontFamily" }
    },
    "body1": {
      "$description": "Default body text",
      "fontSize": { "$value": "16px", "$type": "dimension" },
      "fontWeight": { "$value": 400, "$type": "fontWeight" },
      "lineHeight": { "$value": 1.5, "$type": "number" },
      "fontFamily": { "$value": "Geist, sans-serif", "$type": "fontFamily" }
    },
    "body2": {
      "$description": "Secondary body text",
      "fontSize": { "$value": "14px", "$type": "dimension" },
      "fontWeight": { "$value": 400, "$type": "fontWeight" },
      "lineHeight": { "$value": 1.43, "$type": "number" },
      "fontFamily": { "$value": "Geist, sans-serif", "$type": "fontFamily" }
    },
    "body2Medium": {
      "$description": "Medium-weight secondary body text",
      "fontSize": { "$value": "14px", "$type": "dimension" },
      "fontWeight": { "$value": 500, "$type": "fontWeight" },
      "lineHeight": { "$value": 1.43, "$type": "number" },
      "fontFamily": { "$value": "Geist, sans-serif", "$type": "fontFamily" }
    },
    "body2Bold": {
      "$description": "Bold secondary body text",
      "fontSize": { "$value": "14px", "$type": "dimension" },
      "fontWeight": { "$value": 700, "$type": "fontWeight" },
      "lineHeight": { "$value": 1.43, "$type": "number" },
      "fontFamily": { "$value": "Geist, sans-serif", "$type": "fontFamily" }
    },
    "subtitle1": {
      "$description": "Primary subtitle text",
      "fontSize": { "$value": "16px", "$type": "dimension" },
      "fontWeight": { "$value": 400, "$type": "fontWeight" },
      "letterSpacing": { "$value": "0.15px", "$type": "dimension" },
      "lineHeight": { "$value": 1.75, "$type": "number" },
      "fontFamily": { "$value": "Geist, sans-serif", "$type": "fontFamily" }
    },
    "subtitle2": {
      "$description": "Secondary subtitle text",
      "fontSize": { "$value": "14px", "$type": "dimension" },
      "fontWeight": { "$value": 500, "$type": "fontWeight" },
      "lineHeight": { "$value": 1.57, "$type": "number" },
      "fontFamily": { "$value": "Geist, sans-serif", "$type": "fontFamily" }
    },
    "overline": {
      "$description": "Overline text for labels",
      "fontSize": { "$value": "12px", "$type": "dimension" },
      "fontWeight": { "$value": 400, "$type": "fontWeight" },
      "letterSpacing": { "$value": "1px", "$type": "dimension" },
      "lineHeight": { "$value": 2.66, "$type": "number" },
      "fontFamily": { "$value": "Geist, sans-serif", "$type": "fontFamily" }
    },
    "caption": {
      "$description": "Caption/small text",
      "fontSize": { "$value": "12px", "$type": "dimension" },
      "fontWeight": { "$value": 400, "$type": "fontWeight" },
      "lineHeight": { "$value": "16px", "$type": "dimension" },
      "fontFamily": { "$value": "Geist, sans-serif", "$type": "fontFamily" }
    },
    "button": {
      "$description": "Button text style",
      "fontSize": { "$value": "0.875rem", "$type": "dimension" },
      "fontWeight": { "$value": 500, "$type": "fontWeight" },
      "lineHeight": { "$value": 1.75, "$type": "number" },
      "textTransform": { "$value": "none", "$type": "other" },
      "fontFamily": { "$value": "Geist, sans-serif", "$type": "fontFamily" }
    }
  },
  "spacing": {
    "$description": "Spacing scale based on 8px base unit",
    "base": { "$value": "8px", "$type": "dimension", "$description": "Base spacing unit" },
    "0": { "$value": "0px", "$type": "dimension" },
    "1": { "$value": "8px", "$type": "dimension" },
    "2": { "$value": "16px", "$type": "dimension" },
    "3": { "$value": "24px", "$type": "dimension" },
    "4": { "$value": "32px", "$type": "dimension" },
    "5": { "$value": "40px", "$type": "dimension" },
    "6": { "$value": "48px", "$type": "dimension" },
    "8": { "$value": "64px", "$type": "dimension" },
    "10": { "$value": "80px", "$type": "dimension" },
    "12": { "$value": "96px", "$type": "dimension" }
  },
  "borderRadius": {
    "$description": "Border radius tokens",
    "default": { "$value": "8px", "$type": "dimension", "$description": "Default border radius" },
    "small": { "$value": "6px", "$type": "dimension", "$description": "Used for chips and small elements" },
    "medium": { "$value": "8px", "$type": "dimension", "$description": "Used for buttons, inputs, cards" },
    "large": { "$value": "12px", "$type": "dimension", "$description": "Used for dialogs and cards" },
    "full": { "$value": "100px", "$type": "dimension", "$description": "Used for avatars and circular elements" }
  },
  "shadows": {
    "$description": "Elevation shadow tokens from Figma",
    "none": { "$value": "none", "$type": "shadow", "$description": "Elevation 0 - no shadow" },
    "elevation1": {
      "$value": "0px 2px 4px -2px rgba(0, 0, 0, 0.08), 0px 1px 2px -2px rgba(0, 0, 0, 0.04)",
      "$type": "shadow",
      "$description": "Elevation 1 - buttons, subtle lift"
    },
    "elevation2": {
      "$value": "0px 2px 2px -2px rgba(0, 0, 0, 0.05), 0px 2px 3px -2px rgba(0, 0, 0, 0.1)",
      "$type": "shadow",
      "$description": "Elevation 2 - cards"
    },
    "elevation3": {
      "$value": "0px 3px 4px -2px rgba(0, 0, 0, 0.08), 0px 2px 5px -2px rgba(0, 0, 0, 0.12)",
      "$type": "shadow",
      "$description": "Elevation 3 - raised elements"
    },
    "elevation10": {
      "$value": "0px 20px 24px -4px rgba(0, 0, 0, 0.08), 0px 8px 8px -4px rgba(0, 0, 0, 0.04)",
      "$type": "shadow",
      "$description": "Elevation 10 - overlays, modals, dropdowns"
    },
    "elevation11": {
      "$value": "0px 6px 7px -4px rgba(0, 0, 0, 0.2), 0px 11px 15px 1px rgba(0, 0, 0, 0.14), 0px 4px 20px 3px rgba(0, 0, 0, 0.12)",
      "$type": "shadow",
      "$description": "Elevation 11+"
    },
    "elevation24": {
      "$value": "0px 11px 15px -7px rgba(0, 0, 0, 0.2), 0px 24px 38px 3px rgba(0, 0, 0, 0.14), 0px 9px 46px 8px rgba(0, 0, 0, 0.12)",
      "$type": "shadow",
      "$description": "Elevation 24 - maximum elevation"
    }
  },
  "componentOverrides": {
    "$description": "Component-specific design token overrides",
    "button": {
      "borderRadius": { "$value": "8px", "$type": "dimension" },
      "padding": {
        "small": { "$value": "6px 16px", "$type": "dimension" },
        "medium": { "$value": "10px 24px", "$type": "dimension" },
        "large": { "$value": "12px 32px", "$type": "dimension" }
      },
      "fontSize": {
        "small": { "$value": "0.8125rem", "$type": "dimension" },
        "medium": { "$value": "0.9375rem", "$type": "dimension" },
        "large": { "$value": "1.05rem", "$type": "dimension" }
      }
    },
    "input": {
      "borderRadius": { "$value": "8px", "$type": "dimension" },
      "padding": { "$value": "10px 14px", "$type": "dimension" },
      "fontSize": { "$value": "14px", "$type": "dimension" },
      "lineHeight": { "$value": "20px", "$type": "dimension" },
      "borderWidth": { "$value": "1px", "$type": "dimension" },
      "focusBorderWidth": { "$value": "1.5px", "$type": "dimension" }
    },
    "card": {
      "borderRadius": { "$value": "12px", "$type": "dimension" },
      "shadow": { "$value": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)", "$type": "shadow" }
    },
    "chip": {
      "borderRadius": { "$value": "6px", "$type": "dimension" }
    },
    "dialog": {
      "borderRadius": { "$value": "12px", "$type": "dimension" }
    },
    "avatar": {
      "borderRadius": { "$value": "100px", "$type": "dimension" }
    }
  }
}
